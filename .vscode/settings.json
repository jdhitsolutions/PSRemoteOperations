
{
    // When enabled, will trim trailing whitespace when you save a file.
    "files.trimTrailingWhitespace": true,
    "cSpell.words": [
        "about",
        "archivepath",
        "bitly",
        "cms",
        "dropbox",
        "filepath",
        "message",
        "mkdir",
        "nrof",
        "operations",
        "ps",
        "psremoteoperations",
        "recipient",
        "remote",
        "scriptpath"
    ],
    "cSpell.ignoreWords": [
        "dropbox",
        "runspace"
    ],
    "grammarly.diagnostics": {
        "[markdown]": {
            "ignore": [
                "code","inline"
            ]
        }
    }
}
